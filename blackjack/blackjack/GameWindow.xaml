<Window x:Class="BlackjackApp.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blackjack - Game"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Background="#1e1e1e">

    <Grid Margin="20">
        <Button Content="🖥" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" Click="ToggleFullscreen_Click" Background="Gray" Foreground="White" FontSize="20"/>
        <Button Content="Exit to Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="BackToMenu_Click" Background="Red" Foreground="White" FontSize="16"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="700">

            <TextBlock Text="Blackjack" FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,40"/>

            <TextBlock Text="Dealer's Hand:" FontSize="24" Foreground="White"/>
            <TextBlock x:Name="DealerHandTextBlock" FontSize="20" Foreground="White" Margin="0,0,0,20"/>

            <TextBlock Text="Player's Hand:" FontSize="24" Foreground="White"/>
            <TextBlock x:Name="PlayerHandTextBlock" FontSize="20" Foreground="White" Margin="0,0,0,20"/>

            <TextBlock x:Name="GameStatusTextBlock" FontSize="24" Foreground="White" TextAlignment="Center" Margin="0,20,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="HitButton" Content="Hit" Click="Hit_Click" Width="150" Height="50" Margin="10" FontSize="18" Background="#3b82f6" Foreground="White"/>
                <Button x:Name="StandButton" Content="Stand" Click="Stand_Click" Width="150" Height="50" Margin="10" FontSize="18" Background="#10b981" Foreground="White"/>
                <Button x:Name="NewGameButton" Content="New Game" Click="NewGame_Click" Width="150" Height="50" Margin="10" FontSize="18" Background="#ef4444" Foreground="White" Visibility="Collapsed"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
