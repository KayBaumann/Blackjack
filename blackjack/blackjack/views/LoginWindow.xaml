<Window x:Class="BlackjackApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blackjack - Login"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Background="#1e1e1e">

    <Grid Margin="20">
        <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Click="Exit_Click" Background="Red" Foreground="White"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Login" FontSize="36" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <TextBlock Text="Username:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="UsernameTextBox" Height="35" FontSize="16" Margin="0,5,0,20"/>

            <TextBlock Text="Password:" Foreground="White" FontSize="16"/>
            <PasswordBox x:Name="PasswordBox" Height="35" FontSize="16" Margin="0,5,0,30"/>

            <Button Content="Login" Click="Login_Click" Height="45" FontSize="16" Background="#3b82f6" Foreground="White" Margin="0,0,0,15"/>
            <Button Content="Register" Click="Register_Click" Height="45" FontSize="16" Background="#10b981" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>