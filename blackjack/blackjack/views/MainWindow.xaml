<Window x:Class="BlackjackApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blackjack - Main"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Background="#1e1e1e">

    <Grid Margin="20">
        <Button x:Name="ExitButton"
                Content="X"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="40"
                Height="40"
                Background="Red"
                Foreground="White"
                FontSize="20"
                Click="ExitButton_Click"/>

        <!-- Fullscreen Button rechts oben -->
        <Button Content="🖥" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="40" 
                Height="40" 
                Click="ToggleFullscreen_Click" 
                Background="Gray" 
                Foreground="White" 
                FontSize="20"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock x:Name="WelcomeTextBlock" FontSize="36" Foreground="White" TextAlignment="Center" Margin="0,0,0,40"/>
            <TextBlock x:Name="ChipsTextBlock" FontSize="24" Foreground="White" TextAlignment="Center" Margin="0,0,0,40"/>

            <Button Content="Start Game" Click="StartGame_Click" Height="60" FontSize="20" Background="#3b82f6" Foreground="White" Margin="0,0,0,20"/>
            <Button Content="Logout" Click="Logout_Click" Height="50" FontSize="18" Background="#ef4444" Foreground="White" Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>
</Window>
